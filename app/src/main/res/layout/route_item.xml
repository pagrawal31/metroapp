<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:id="@+id/layout_route_list_item"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" android:layout_marginRight="@dimen/activity_horizontal_margin">
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/start_track"
            android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_rail_track_vertical" />
        <TextView android:textSize="@dimen/material_text_title" android:textStyle="bold"
            android:gravity="center" android:layout_gravity="center_horizontal"
            android:id="@+id/station_no" android:background="@drawable/round_rect_shape"
            android:layout_width="56.0dip" android:layout_height="56.0dip" />
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/end_track" android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:scaleType="fitXY" app:srcCompat="@drawable/ic_rail_track_vertical" />
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:orientation="vertical"
        android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/material_text_title" android:textStyle="bold"
            android:id="@+id/station_info" android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip" android:layout_marginTop="8.0dip" android:layout_marginRight="8.0dip"
            android:layout_marginBottom="8.0dip" android:text="Satguru RamSingh Marg" android:maxLines="2" />
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:textSize="@dimen/material_text_body2" android:textStyle="italic"
                android:layout_gravity="left" android:id="@+id/line_info" android:layout_width="0.0dip"
                android:layout_height="wrap_content" android:layout_marginLeft="8.0dip" android:text="Yellow Line" android:layout_weight="1.0" />
            <TextView android:textSize="@dimen/material_text_body2" android:textStyle="italic" android:layout_gravity="right" android:id="@+id/time_info"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8.0dip" android:text="~2.5 min" />
        </LinearLayout>
        <TextView android:textSize="@dimen/material_text_body2" android:textStyle="italic" android:id="@+id/platform_info"
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="8.0dip"
            android:layout_marginTop="8.0dip" android:layout_marginRight="8.0dip" android:layout_marginBottom="8.0dip"
            android:text="Satguru RamSingh Marg" android:maxLines="2" />
    </LinearLayout>
</LinearLayout>